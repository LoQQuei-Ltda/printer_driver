{
  "name": "print-management-installer",
  "version": "1.0.0",
  "description": "Instalador do Sistema de Gerenciamento de Impressão",
  "main": "main.js",
  "updateConfig": {
    "autoUpdate": true
  },
  "scripts": {
    "start": "electron .",
    "clean": "rimraf dist && rimraf node_modules/.cache",
    "dev": "nodemon --exec electron . --watch . --ext js,html,css",
    "prebuild": "npm run clean && npm run prepare-server-files",
    "prepare-server-files": "node prepare-server-files.js",
    "build": "electron-builder --win --x64",
    "postinstall": "electron-builder install-app-deps"
  },
  "author": "LoQQuei-Ltda",
  "license": "MIT",
  "devDependencies": {
    "electron": "^29.0.0",
    "electron-builder": "^24.13.0",
    "glob": "^11.0.2",
    "javascript-obfuscator": "^4.1.1",
    "nodemon": "^3.1.9",
    "rimraf": "^5.0.5",
    "uglify-js": "^3.19.3"
  },
  "build": {
    "appId": "com.loqquei.print-management-installer",
    "productName": "Gerenciamento de Impressão - LoQQuei",
    "win": {
      "target": "nsis",
      "requestedExecutionLevel": "requireAdministrator"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true,
      "shortcutName": "Gerenciamento de Impressão"
    },
    "files": [
      "**/*",
      "!**/*.{iml,o,hprof,orig,pyc,pyo,rbc,swp,csproj,sln,xproj}",
      "!**/{.git,.hg,.svn,CVS,RCS,SCCS,__pycache__,thumbs.db,.DS_Store,.idea,.vs,.vscode,.gitattributes,.*ignore}"
    ],
    "extraResources": [
      {
        "from": "node_modules/",
        "to": "node_modules/",
        "filter": [
          "**/*"
        ]
      },
      {
        "from": "resources/",
        "to": "resources/",
        "filter": [
          "**/*"
        ]
      }
    ],
    "extraFiles": [
      {
        "from": "resources/print_server_desktop",
        "to": "resources/print_server_desktop",
        "filter": [
          "**/*",
          "!node_modules/**",
          "!.git/**"
        ]
      }
    ]
  },
  "dependencies": {
    "adm-zip": "^0.5.16",
    "auto-launch": "^5.0.5",
    "axios": "^1.6.7",
    "compare-versions": "^6.1.1",
    "node-schedule": "^2.1.1"
  }
}
