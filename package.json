{
  "name": "print-management-installer",
  "version": "1.0.0",
  "description": "Instalador do Sistema de Gerenciamento de Impressão",
  "main": "main.js",
  "updateConfig": {
    "autoUpdate": true
  },
  "scripts": {
    "start": "electron .",
    "clean": "rimraf dist && rimraf node_modules/.cache",
    "dev": "nodemon --config nodemon.json --exec electron . --watch .",
    "prebuild": "npm run clean && npm run prepare-server-files",
    "prepare-server-files": "node prepare-server-files.js",
    "build": "electron-builder build --publish never",
    "build:win": "electron-builder build --win --publish never",
    "build:linux": "electron-builder build --linux --publish never",
    "build:mac": "electron-builder build --mac --publish never",
    "build:all": "electron-builder build -mwl --publish never",
    "postinstall": "electron-builder install-app-deps",
    "depcheck": "npx depcheck"
  },
  "author": "LoQQuei",
  "license": "MIT",
  "devDependencies": {
    "depcheck": "^1.4.7",
    "electron": "^29.0.0",
    "electron-builder": "^24.13.3",
    "glob": "^11.0.2",
    "javascript-obfuscator": "^4.1.1",
    "nodemon": "^3.1.9",
    "rimraf": "^5.0.5",
    "uglify-js": "^3.19.3"
  },
  "build": {
    "appId": "com.loqquei.print-management-installer",
    "productName": "Gerenciamento de Impressão - LoQQuei",
    "asar": true,
    "compression": "maximum",
    "icon": "assets/icon/icon.ico",
    "mac": {
      "category": "public.app-category.utilities",
      "icon": "assets/icon/icon.icns",
      "darkModeSupport": true,
      "target": [
        "dmg",
        "zip"
      ],
      "hardenedRuntime": true,
      "gatekeeperAssess": false,
      "entitlements": "build/entitlements.mac.plist",
      "entitlementsInherit": "build/entitlements.mac.plist"
    },
    "win": {
      "target": [
        {
          "target": "nsis",
          "arch": [
            "x64",
            "ia32"
          ]
        },
        {
          "target": "portable",
          "arch": [
            "x64",
            "ia32"
          ]
        }
      ],
      "icon": "assets/icon/icon.ico",
      "requestedExecutionLevel": "requireAdministrator"
    },
    "linux": {
      "target": [
        "deb",
        "rpm",
        "AppImage"
      ],
      "category": "Utility",
      "icon": "assets/icon/icon.png",
      "maintainer": "LoQQuei"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true,
      "shortcutName": "Gerenciamento de Impressão"
    },
    "deb": {
      "depends": [
        "cups",
        "samba",
        "postgresql",
        "avahi-daemon"
      ]
    },
    "rpm": {
      "depends": [
        "cups",
        "samba",
        "postgresql",
        "avahi-daemon"
      ]
    },
    "files": [
      "**/*",
      "!**/node_modules/*/{CHANGELOG.md,README.md,README,readme.md,readme}",
      "!**/node_modules/*/{test,__tests__,tests,powered-test,example,examples}",
      "!**/node_modules/*.d.ts",
      "!**/node_modules/.bin",
      "!**/*.{iml,o,hprof,orig,pyc,pyo,rbc,swp,csproj,sln,xproj}",
      "!.editorconfig",
      "!**/._*",
      "!**/{.DS_Store,.git,.hg,.svn,CVS,RCS,SCCS,.gitignore,.gitattributes}",
      "!**/{__pycache__,thumbs.db,.flowconfig,.idea,.vs,.nyc_output}",
      "!**/{appveyor.yml,.travis.yml,circle.yml}",
      "!**/{npm-debug.log,yarn.lock,.yarn-integrity,.yarn-metadata.json}"
    ],
    "extraResources": [
      {
        "from": "resources/",
        "to": "resources/",
        "filter": [
          "**/*"
        ]
      },
      {
        "from": "platforms/${os}/",
        "to": "platforms/"
      }
    ],
    "extraFiles": [
      {
        "from": "resources/print_server_desktop",
        "to": "resources/print_server_desktop",
        "filter": [
          "**/*",
          "!node_modules/**",
          "!.git/**"
        ]
      }
    ]
  },
  "dependencies": {
    "auto-launch": "^5.0.5",
    "axios": "^1.6.7",
    "body-parser": "^2.2.0",
    "compare-versions": "^6.1.1",
    "cors": "^2.8.5",
    "electron-store": "^10.0.1",
    "express": "^5.1.0",
    "fs-extra": "^11.3.0",
    "node-schedule": "^2.1.1",
    "sudo-prompt": "^9.2.1",
    "systeminformation": "^5.25.11"
  }
}
