{
  "name": "print-management-installer",
  "version": "1.0.4",
  "description": "Instalador do Sistema de Gerenciamento de Impressão",
  "main": "main.js",
  "updateConfig": {
    "autoUpdate": true
  },
  "scripts": {
    "start": "electron .",
    "clean": "rimraf dist && rimraf node_modules/.cache",
    "dev": "nodemon --config nodemon.json --exec electron . --watch .",
    "prebuild": "npm run clean && npm run prepare-server-files",
    "prepare-server-files": "node prepare-server-files.js",
    "build": "electron-builder --win --x64 --config.asar=true --config.compression=maximum",
    "postinstall": "electron-builder install-app-deps",
    "depcheck": "npx depcheck",
    "lint": "eslint ."
  },
  "author": "LoQQuei",
  "license": "MIT",
  "devDependencies": {
    "@eslint/js": "^9.26.0",
    "depcheck": "^1.4.7",
    "electron": "^29.0.0",
    "electron-builder": "^24.13.3",
    "eslint": "^9.26.0",
    "glob": "^11.0.2",
    "globals": "^16.1.0",
    "javascript-obfuscator": "^4.1.1",
    "nodemon": "^3.1.9",
    "rimraf": "^5.0.5",
    "uglify-js": "^3.19.3"
  },
  "build": {
    "appId": "com.loqquei.print-management-installer",
    "productName": "Gerenciamento de Impressão - LoQQuei",
    "asar": true,
    "compression": "maximum",
    "icon": "assets/icon/icon.ico",
    "win": {
      "target": "nsis",
      "icon": "assets/icon/icon.ico",
      "requestedExecutionLevel": "requireAdministrator"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true,
      "shortcutName": "Gerenciamento de Impressão"
    },
    "files": [
      "**/*",
      "!**/node_modules/*/{CHANGELOG.md,README.md,README,readme.md,readme}",
      "!**/node_modules/*/{test,__tests__,tests,powered-test,example,examples}",
      "!**/node_modules/*.d.ts",
      "!**/node_modules/.bin",
      "!**/*.{iml,o,hprof,orig,pyc,pyo,rbc,swp,csproj,sln,xproj}",
      "!.editorconfig",
      "!**/._*",
      "!**/{.DS_Store,.git,.hg,.svn,CVS,RCS,SCCS,.gitignore,.gitattributes}",
      "!**/{__pycache__,thumbs.db,.flowconfig,.idea,.vs,.nyc_output}",
      "!**/{appveyor.yml,.travis.yml,circle.yml}",
      "!**/{npm-debug.log,yarn.lock,.yarn-integrity,.yarn-metadata.json}"
    ],
    "extraResources": [
      {
        "from": "node_modules/",
        "to": "node_modules/",
        "filter": [
          "**/*"
        ]
      },
      {
        "from": "resources/",
        "to": "resources/",
        "filter": [
          "**/*"
        ]
      }
    ],
    "extraFiles": [
      {
        "from": "resources/print_server_desktop",
        "to": "resources/print_server_desktop",
        "filter": [
          "**/*",
          "!node_modules/**",
          "!.git/**"
        ]
      }
    ]
  },
  "dependencies": {
    "auto-launch": "^5.0.5",
    "axios": "^1.6.7",
    "body-parser": "^2.2.0",
    "compare-versions": "^6.1.1",
    "cors": "^2.8.5",
    "express": "^5.1.0",
    "node-schedule": "^2.1.1"
  }
}
